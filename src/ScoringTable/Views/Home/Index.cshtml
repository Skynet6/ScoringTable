@using ScoringTable.Models.DAL.SolvedMazes
@model List<ScoringTable.Models.Team>
<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4"></div>
            <div style="vertical-align: middle" class="col-md-4 col-sm-4">
                <h1 style="text-indent: -20px">Time Remaining</h1>
                <div id="clockdiv">
                    @*<div>
                        <span class="days"></span>
                        <div class="smalltext">Days</div>
                    </div>*@
                    <div>
                        <span class="hours"></span>
                        <div class="smalltext">Hours</div>
                    </div>
                    <div>
                        <span class="minutes"></span>
                        <div class="smalltext">Minutes</div>
                    </div>
                    <div>
                        <span class="seconds"></span>
                        <div class="smalltext">Seconds</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-8">
                <hr/>
                <div>
                    <table class="table table-responsive table-striped table-hover table-bordered" id="scoreTable">
                        <thead class="thead-inverse">
                        <tr>
                            <th>Name</th>
                            @for (int i = 0; i < 5; i++)
                            {
                                <th>Maze @i</th>
                            }
                            <th>Sum</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var team in Model)
                        {
                            <tr>
                                <td>@team.Name</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    if (i < team.Mazes.Count)
                                    {
                                        if (team.Mazes[i].Solved)
                                        {
                                            if (team.Mazes[i].BestTeam)
                                            {
                                                <td class="table-success solved">
                                                    @team.Mazes[i].Score *
                                                </td>
                                            }
                                            else if (team.Mazes[i].WorstTeam)
                                            {
                                                <td class="table-danger solved">
                                                    @team.Mazes[i].Score *
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="solved">
                                                    @team.Mazes[i].Score *
                                                </td>
                                            }
                                        }
                                        else
                                        {
                                            if (team.Mazes[i].BestTeam)
                                            {
                                                <td class="table-success">
                                                    @team.Mazes[i].Score
                                                </td>
                                            }
                                            else if (team.Mazes[i].WorstTeam)
                                            {
                                                <td class="table-danger">
                                                    @team.Mazes[i].Score
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    @team.Mazes[i].Score
                                                </td>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                }
                                <td>@team.Sum</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-3"></div>
            <span id="timeLeft" class="hidden timeLeft" hidden="">@ViewData["timeLeft"]</span>
        </div>
    </div>
</div>